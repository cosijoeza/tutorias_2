<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-5">
    <center>
    <a href="http://localhost/tutorias/admin.php"><button type="button" class="btn btn-primary">Volver</button>
    </a>
    </center>
  </div>
  <div class="col-2"><h1>Pruebas</h1></div>
  <div class="col-5"></div>
</div>
<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pruebas.each do |prueba| %>
          <tr>
            <td><%= prueba.nombre %></td>
            <td><%= link_to 'Mostrar', prueba %></td>
            <td><%= link_to 'Editar', edit_prueba_path(prueba) %></td>
            <td><%= link_to 'Eliminar', prueba, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-2"></div>
</div>
<br>

<div class="row">
  <div class="col-5"></div>
  <div class="col-2">
      <%= link_to 'Crear prueba',new_prueba_path,class: "btn btn-primary" %>
  </div>
  <div class="col-5"></div>
</div>