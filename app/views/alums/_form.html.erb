<%= form_with(model: alum, local: true) do |form| %>
  <% if alum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(alum.errors.count, "error") %> prohibited this alum from being saved:</h2>

      <ul>
      <% alum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :matricula %>
    <%= form.number_field :matricula, id: :alum_matricula %>
  </div>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, id: :alum_nombre %>
  </div>

  <div class="field">
    <%= form.label :apellidos %>
    <%= form.text_field :apellidos, id: :alum_apellidos %>
  </div>

  <div class="field">
    <%= form.label :foto %>
    <%= form.file_field :foto, id: :alum_foto %>
  </div>

  <div class="field">
    <%= form.label :correo %>
    <%= form.text_field :correo, id: :alum_correo %>
  </div>

  <div class="field">
    <%= form.label :prof_id %>
    <%= form.select :prof_id, options_from_collection_for_select(Prof.all, 'id', 'nombre', @alum.prof_id) %>
  </div>

  <div class="field">
    <%= form.label :idiom_id %>
    <%= form.select :idiom_id, options_from_collection_for_select(Idiom.all, 'id', 'nivel', @alum.idiom_id) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
